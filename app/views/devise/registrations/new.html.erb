<h2>Registrar usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div> <%= f.label "Nombre" %> <br />
    <%= f.text_field :first_name %> </div>

  <div> <%= f.label "Apellido" %> <br />
    <%= f.text_field :last_name %> </div>

  <div> <%= f.label "Nombre de usuario" %> <br />
    <%= f.text_field :nick_name %> </div>

  <div> <%= f.label "Email" %> <br />
    <%= f.email_field :email, autofocus: true %> </div>

  <div> <%= f.label "Contraseña" %> <br />
    <%= f.password_field :password, autocomplete: "off" %> </div>

  <div> <%= f.label "Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %> </div>

  <div class="actions"> <%= f.submit "Registrar" %> </div>
<% end %>

<%= render "devise/shared/links" %>
