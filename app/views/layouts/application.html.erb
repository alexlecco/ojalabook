<!DOCTYPE html>
<html>
<head>
  <title>Ojalabook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <a href="#" class="navbar-brand">OjalaBook</a>
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Estados", timeline_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li><%= link_to current_user.complete_name, edit_user_registration_path %></li>
          <li><%= link_to "Cerrar sesión", destruir_path %></li>
        <% else %>
          <li><%= link_to "Registrar", registrar_path %></li>
          <li><%= link_to "Iniciar sesión", comenzar_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="container">

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
