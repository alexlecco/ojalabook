<div class="page-header">
  <h1>Todos los estados</h1>
</div>

<%= link_to "Crear un nuevo estado", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>

  <div class="status">
    <strong><%= status.user.complete_name %></strong>
    <p><%= status.content %></p>
    <div>
      <%= link_to "Hace " + time_ago_in_words(status.created_at) %>
      <span class="admin">
      | <%= link_to "Editar", edit_status_path(status) %> |
        <%= link_to "Borrar", status, method: :delete, data: {confirm: "¿Estás seguro que quieres borrar este estado?"} %>
      </span>
    </div>
  </div>

<% end %>
